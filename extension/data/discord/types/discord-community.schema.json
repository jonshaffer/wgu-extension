{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "discord-community.schema.json",
  "title": "Discord Community File",
  "description": "Schema for WGU Discord raw community files (data/discord/raw/*.json)",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Discord guild (server) ID",
      "pattern": "^\\d{10,}$"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Discord server name"
    },
    "description": {
      "type": "string",
      "description": "Server description",
      "minLength": 1
    },
    "inviteUrl": {
      "type": "string",
      "description": "Invite URL for the server",
      "format": "uri"
    },
    "hierarchy": {
      "type": "object",
      "description": "WGU hierarchy metadata for the community",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["university", "college", "program", "course", "community"]
        },
        "college": {
          "type": "string",
          "enum": ["technology", "healthcare", "business", "education"]
        },
        "program": { "type": "string" },
        "courseCode": { "type": "string" }
      },
      "required": ["level"],
      "additionalProperties": false
    },
    "channels": {
      "type": "array",
      "description": "Array of channels within the server",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^\\d{10,}$"
          },
          "name": { "type": "string", "minLength": 1 },
          "description": { "type": "string" },
          "communityId": {
            "type": "string",
            "pattern": "^\\d{10,}$"
          },
          "type": {
            "type": "string",
            "enum": ["text", "voice", "forum"]
          },
          "courseRelevance": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          },
          "tags": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 },
            "uniqueItems": true
          }
        },
        "required": ["id", "name", "communityId", "type"],
        "additionalProperties": false
      }
    }
  },
  "required": ["id", "name", "hierarchy", "channels"],
  "additionalProperties": false
}
