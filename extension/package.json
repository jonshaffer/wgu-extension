{
  "name": "unofficial-wgu-extension",
  "description": "Adds simple UI changes to WGU pages. Unofficial student made tool for WGU students. Not endorsed by WGU.",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "dev:chrome": "wxt -b chrome",
    "dev:edge": "wxt -b edge",
    "build": "wxt build",
    "build:dev": "wxt build --mode development",
    "build:preview": "wxt build --mode preview",
    "build:prod": "wxt build --mode production",
    "build:firefox": "wxt build -b firefox",
    "build:chrome": "wxt build -b chrome",
    "build:edge": "wxt build -b edge",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "zip:chrome": "wxt zip -b chrome",
    "zip:edge": "wxt zip -b edge",
    "zip:preview": "wxt zip --mode preview",
    "zip:firefox:preview": "wxt zip -b firefox --mode preview",
    "zip:edge:preview": "wxt zip -b edge --mode preview",
    "compile": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "postinstall": "test \"$CI\" = \"true\" || pnpm wxt prepare",
    "release": "pnpm run build:prod && pnpm run zip && pnpm run zip:firefox",
    "catalog:check": "tsx scripts/check-wgu-catalog.ts",
    "catalog:compare": "tsx scripts/compare-catalogs.ts",
    "catalog:check-page": "tsx scripts/check-wgu-catalog-page.ts",
    "types:build": "pnpm --filter=../data run types:build"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.5",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.2.5",
    "@tailwindcss/vite": "^4.1.16",
    "@wgu-extension/graphql-client": "workspace:*",
    "@wxt-dev/storage": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.539.0",
    "next-themes": "^0.4.6",
    "pdf-parse": "^1.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "tw-animate-css": "^1.3.6"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.29",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@wxt-dev/auto-icons": "^1.0.2",
    "@wxt-dev/module-react": "^1.1.3",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^26.1.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "wxt": "^0.20.7"
  }
}