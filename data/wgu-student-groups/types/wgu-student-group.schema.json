{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "wgu-student-group.schema.json",
  "title": "WGU Student Group",
  "description": "Schema for WGU Student Group raw files (data/wgu-student-groups/raw/*.json)",
  "type": "object",
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "category": { "type": "string" },
    "url": { "type": "string", "format": "uri" },
    "type": { "type": "string", "enum": ["open", "closed", "private"] },
    "access_requirements": { "type": "string" },
    "target_audience": { "type": "string" }
  },
  "required": ["id", "name", "url", "type"],
  "additionalProperties": false
}
