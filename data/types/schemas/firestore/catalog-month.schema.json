{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "firestore-catalog-month.schema.json",
  "title": "Catalog Month (Firestore)",
  "description": "Schema for monthly catalog documents stored in Firestore",
  "type": "object",
  "properties": {
    "id": { 
      "type": "string", 
      "pattern": "^\\d{4}-\\d{2}$",
      "description": "Catalog month identifier (YYYY-MM)" 
    },
    "snapshot": {
      "type": "object",
      "description": "Complete catalog data for the month",
      "properties": {
        "courses": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "code": { "type": "string" },
              "title": { "type": "string" },
              "credits": { "type": "number" },
              "description": { "type": "string" }
            }
          }
        },
        "degreePrograms": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "code": { "type": "string" },
              "title": { "type": "string" },
              "college": { "type": "string" },
              "level": { "type": "string" }
            }
          }
        }
      }
    },
    "report": {
      "type": "object",
      "description": "Catalog parsing report with statistics and validation results",
      "properties": {
        "filename": { "type": "string" },
        "parsedAt": { "type": "string", "format": "date-time" },
        "parserVersion": { "type": "string" },
        "summary": {
          "type": "object",
          "properties": {
            "totalCourses": { "type": "number" },
            "totalDegreePlans": { "type": "number" },
            "totalProgramOutcomes": { "type": "number" },
            "ccnCoverage": { "type": "number" },
            "cuCoverage": { "type": "number" },
            "validationIssues": { "type": "number" },
            "parsingDuration": { "type": "number" }
          },
          "required": ["totalCourses", "totalDegreePlans"]
        },
        "validation": {
          "type": "object",
          "properties": {
            "degreePlanCourseValidation": {
              "type": "object",
              "properties": {
                "totalCoursesInPlans": { "type": "number" },
                "uniqueCoursesInPlans": { "type": "number" },
                "coursesFoundInCatalog": { "type": "number" },
                "missingCourses": { "type": "array", "items": { "type": "string" } },
                "validationRate": { "type": "number" }
              }
            },
            "dataCompleteness": { "type": "object" },
            "issues": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": { "type": "string" },
                  "severity": { "type": "string", "enum": ["error", "warning", "info"] },
                  "location": { "type": "string" },
                  "message": { "type": "string" },
                  "details": { "type": "object" }
                },
                "required": ["type", "severity", "location", "message"]
              }
            }
          }
        },
        "statistics": { "type": "object" },
        "processingDetails": { "type": "object" }
      },
      "required": ["filename", "parsedAt", "parserVersion", "summary"]
    },
    "createdAt": { 
      "type": "string", 
      "format": "date-time",
      "description": "When this document was created" 
    }
  },
  "required": ["id", "snapshot", "createdAt"],
  "additionalProperties": false
}