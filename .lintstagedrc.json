{
  "extension/**/*.{ts,tsx}": [
    "bash -c 'cd extension && npx eslint --fix ${@/#extension\\//}' --"
  ],
  "site/**/*.{ts,tsx}": [
    "bash -c 'cd site && npx eslint --fix ${@/#site\\//}' --"
  ],
  "data/**/*.{ts,js}": [
    "bash -c 'cd data && npx eslint --fix ${@/#data\\//}' --"
  ],
  "graphql-client/**/*.{ts,js}": [
    "bash -c 'cd graphql-client && npx eslint --fix ${@/#graphql-client\\//}' --"
  ],
  "functions/**/*.{ts,js}": [
    "bash -c 'cd functions && npx eslint --fix ${@/#functions\\//}' --"
  ],
  "*.{json,yml,yaml,md}": [
    "echo 'Non-code files validated. Type checking happens separately.'"
  ]
}
