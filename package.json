{
  "name": "unofficial-wgu-extension",
  "description": "Adds simple UI changes to WGU pages. Unofficial student made tool for WGU students. Not endorsed by WGU.",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "dev:chrome": "wxt -b chrome",
    "dev:edge": "wxt -b edge",
    "build": "wxt build",
    "build:dev": "wxt build --mode development",
    "build:preview": "wxt build --mode preview",
    "build:prod": "wxt build --mode production",
    "build:with-data": "npm run data:ingest && wxt build",
    "build:prod:with-data": "npm run data:ingest && wxt build --mode production",
    "build:firefox": "wxt build -b firefox",
    "build:chrome": "wxt build -b chrome",
    "build:edge": "wxt build -b edge",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "zip:chrome": "wxt zip -b chrome",
    "zip:edge": "wxt zip -b edge",
    "zip:preview": "wxt zip --mode preview",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "release": "npm run build:prod && npm run zip && npm run zip:firefox",
    "data:ingest": "tsx data/run-data-pipeline.ts",
    "data:ingest:discord": "tsx data/scripts/ingest-discord.ts",
    "data:ingest:reddit": "tsx data/scripts/ingest-reddit.ts",
    "data:ingest:wgu-connect": "tsx data/scripts/ingest-wgu-connect.ts",
    "catalog:check": "tsx scripts/check-wgu-catalog.ts",
    "catalog:compare": "tsx scripts/compare-catalogs.ts",
    "catalog:check-page": "tsx scripts/check-wgu-catalog-page.ts",
    "data:ingest:catalog": "tsx data/scripts/ingest-catalog.ts",
    "data:ingest:catalog:v1": "tsx data/scripts/ingest-catalog-v1.ts",
    "data:ingest:catalog:auto": "tsx data/scripts/ingest-catalog-auto.ts",
    "data:transform": "tsx data/scripts/transform-unified.ts",
    "test:catalog": "tsx data/catalogs/run-tests.ts",
    "test:catalog:compare": "tsx data/catalogs/run-tests.ts --compare",
    "test:catalog:generate": "tsx data/catalogs/generate-samples.ts",
    "catalog:download": "tsx data/catalogs/download-catalogs.ts",
    "catalog:summary": "tsx data/catalogs/download-catalogs.ts --summary",
    "catalog:pipeline": "tsx data/catalogs/catalog-pipeline.ts"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.5",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.2.5",
    "@tailwindcss/vite": "^4.1.3",
    "@wxt-dev/storage": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "next-themes": "^0.4.6",
    "pdf-parse": "^1.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.3",
    "tw-animate-css": "^1.2.5"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "@wxt-dev/auto-icons": "^1.0.2",
    "@wxt-dev/module-react": "^1.1.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "wxt": "^0.20.7"
  }
}
