{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "discord-communities.schema.json",
  "title": "Processed Discord Communities",
  "description": "Schema for processed Discord communities aggregate (data/discord/processed/communities.json)",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "generatedAt": { "type": "string", "format": "date-time" },
        "totalCommunities": { "type": "integer", "minimum": 0 },
        "totalChannels": { "type": "integer", "minimum": 0 },
        "description": { "type": "string" }
      },
      "required": ["generatedAt", "totalCommunities", "totalChannels", "description"],
      "additionalProperties": false
    },
    "communities": {
      "type": "object",
      "description": "Map of Discord community ID to processed summary",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "pattern": "^\\d{10,}$" },
          "name": { "type": "string", "minLength": 1 },
          "description": { "type": "string" },
          "inviteUrl": { "type": "string", "format": "uri" },
          "hierarchy": {
            "type": "object",
            "properties": {
              "level": { "type": "string", "enum": ["university", "college", "program", "course", "community"] },
              "college": { "type": "string", "enum": ["technology", "healthcare", "business", "education"] },
              "program": { "type": "string" },
              "courseCode": { "type": "string" }
            },
            "required": ["level"],
            "additionalProperties": false
          },
          "channelCounts": {
            "type": "object",
            "properties": {
              "total": { "type": "integer", "minimum": 0 },
              "text": { "type": "integer", "minimum": 0 },
              "voice": { "type": "integer", "minimum": 0 },
              "forum": { "type": "integer", "minimum": 0 }
            },
            "required": ["total", "text", "voice", "forum"],
            "additionalProperties": false
          },
          "coursesMentioned": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          },
          "tags": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 },
            "uniqueItems": true
          }
        },
        "required": ["id", "name", "hierarchy", "channelCounts", "coursesMentioned", "tags"],
        "additionalProperties": false
      }
    }
  },
  "required": ["metadata", "communities"],
  "additionalProperties": false
}
