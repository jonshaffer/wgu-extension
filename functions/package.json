{
  "name": "@wgu-extension/functions",
  "version": "0.1.0",
  "private": false,
  "description": "Firebase Functions and GraphQL schema for WGU Extension",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonshaffer/wgu-extension.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./graphql": {
      "import": "./lib/graphql/index.js",
      "require": "./lib/graphql/index.js",
      "types": "./lib/graphql/index.d.ts"
    }
  },
  "files": [
    "lib/graphql/**/*"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.ts . --fix",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "prepublishOnly": "pnpm run build",
    "build:watch": "tsc --watch",
    "serve": "pnpm run build && firebase emulators:start --only functions,firestore --import=./emulator-data --export-on-exit=./emulator-data",
    "serve:fresh": "pnpm run build && firebase emulators:start --only functions,firestore",
    "serve:dvc": "pnpm run dvc:pull && pnpm run serve",
    "dvc:pull": "cd .. && nix develop --command dvc pull",
    "dvc:push": "cd .. && nix develop --command dvc push",
    "shell": "pnpm run build && firebase functions:shell",
    "start": "pnpm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "sync:data": "ts-node scripts/sync-github-to-firestore.ts",
    "seed:emulator": "FIRESTORE_EMULATOR_HOST=localhost:8181 tsx scripts/seed-emulator.ts",
    "seed:emulator:full": "FIRESTORE_EMULATOR_HOST=localhost:8181 tsx scripts/seed-emulator-comprehensive.ts",
    "seed:emulator:minimal": "FIRESTORE_EMULATOR_HOST=localhost:8181 tsx scripts/seed-emulator-minimal.ts",
    "seed:firestore": "FIRESTORE_EMULATOR_HOST=localhost:8181 tsx scripts/seed-firestore.ts",
    "test:seed": "tsx src/test/seed-emulator.ts",
    "seed:test-data": "FIRESTORE_EMULATOR_HOST=localhost:8181 tsx scripts/seed-test-data.ts",
    "seed:test-data:minimal": "FIRESTORE_EMULATOR_HOST=localhost:8181 tsx scripts/seed-test-data.ts minimal",
    "seed:test-data:standard": "FIRESTORE_EMULATOR_HOST=localhost:8181 tsx scripts/seed-test-data.ts standard",
    "emulator:export": "firebase emulators:export ./emulator-data",
    "emulator:clear": "rm -rf ./emulator-data",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:integration": "firebase emulators:exec --only firestore 'jest --testMatch=\"**/*.integration.test.ts\"'",
    "test:integration:debug": "firebase emulators:exec --only firestore 'node --inspect-brk node_modules/.bin/jest --runInBand --testMatch=\"**/*.integration.test.ts\"'",
    "test:emulator": "pnpm run build && firebase emulators:exec --only functions,firestore 'pnpm test'",
    "test:unit": "jest --testMatch=\"**/*.test.ts\" --testPathIgnorePatterns=\"integration.test.ts\""
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@apollo/server": "^5.1.0",
    "@as-integrations/express4": "^1.1.2",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.6.0",
    "graphql": "^16.11.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-query-complexity": "^1.1.0",
    "graphql-yoga": "^5.15.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@graphql-tools/schema": "^10.0.0",
    "@jest/globals": "^30.0.5",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/graphql-depth-limit": "^1.1.6",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@types/tar": "^6.1.13",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "supertest": "^7.1.4",
    "tar": "^7.5.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "optionalDependencies": {
    "dotenv": "^17.2.3"
  }
}
